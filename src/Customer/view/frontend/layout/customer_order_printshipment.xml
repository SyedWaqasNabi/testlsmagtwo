<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="print" />
    <body>
        <referenceContainer name="content">
            <block class="Ls\Customer\Block\Order\View" name="sales.order.view" cacheable="false" after="sales.order.info.links">
                <block class="Ls\Customer\Block\Order\Items" name="custom_order_items" template="Ls_Customer::order/items.phtml">
                    <block class="Ls\Customer\Block\Order\Item\Renderer" name="custom_order_item_renderer" as="custom_order_item_renderer" template="Ls_Customer::order/shipment/items/renderer/default.phtml"/>
                </block>
            </block>
            <block class="Ls\Customer\Block\Order\Info" as="info" name="sales.order.info" after="custom.order.info"/>
        </referenceContainer>
    </body>
</page>