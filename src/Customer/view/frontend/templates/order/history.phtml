                    <tr>
                        <td data-th="<?= $block->escapeHtml(__('Order #')) ?>"
                            class="col id"><?= /* @escapeNotVerified */
                            $_order->getRealOrderId() ?></td>
                        <td data-th="<?= $block->escapeHtml(__('Date')) ?>"
                            class="col date"><?= /* @escapeNotVerified */
